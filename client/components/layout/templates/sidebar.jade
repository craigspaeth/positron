nav#layout-sidebar
  a#layout-sidebar-home( href='/' )
    include ../public/icons/layout_home.svg
    br
    | Artsy Writer
  a#layout-sidebar-new-post
    include ../public/icons/layout_new_post.svg
    br
    | New Post
  a( href='/posts?published=false'
     class=(sd.URL == '/posts?published=false' ? 'is-active' : '') )
    include ../public/icons/layout_drafts.svg
    br
    | Drafts
  a( href='/posts?published=true'
     class=(sd.URL == '/posts?published=true' ? 'is-active' : '') )
    include ../public/icons/layout_published.svg
    br
    | Published
  a#layout-sidebar-help
    include ../public/icons/layout_help.svg
    br
    | Help
  #layout-sidebar-profile
    img( src=(user.get('profile').icon_url) )
    br
    = user.get('name').split(' ')[0]
    nav#layout-sidebar-profile-menu
      a( href=sd.FORCE_URL + '/' + user.get('profile').handle ) View profile on Artsy
      a( href='/logout' ) Sign out