@import '../../components/stylus_lib'

#post-list-items
  li
    margin-top whitespace-block-size
    line-height 26px
    h1
      font-size 20px
    img
      width 130px
      margin-right 20px

.post-list-item-left, .post-list-item-right
  display inline-block
  vertical-align top

.post-list-item-tags, .post-list-items-dates
  avant-garde()
  font-size small-avant-garde-font-size

.post-list-item-tags
  line-height small-avant-garde-font-size
  margin-bottom 5px

.post-list-items-dates
  display inline-block
  color gray-dark-color
  strong
    margin-right 10px
    color black

.post-list-missing
  color gray-dark-color